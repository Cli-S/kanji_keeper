<body id="sign-in-body">
  <div class="signed-out-pages">
    <h2 class="signed-out-header">welcome back!</h2>
    <div class="forms-layout">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", :class => 'form-field-design' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", :class => 'form-field-design' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "log in",:class => 'main-form-button' %>
        </div>
      <% end %>

      <%# render "devise/shared/links" %>
      <div class="forgot-pass"><%= link_to "forgot password", new_password_path(resource_name) %></div>
      <div class="sign-up-now">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></div>
    </div>
  </div>
</body>