<!DOCTYPE html>
<html>
  <head>
    <title>KanjiKeeper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render 'layouts/header_signedin' %>
    <% else %>
      <%= render 'layouts/header_signedout' %>
    <% end %>
    <%= yield %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
